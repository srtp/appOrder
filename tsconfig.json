// prettier-ignore
{
  "extends": "@tsconfig/react-native/tsconfig.json",     /* Recommended React Native TSConfig base */
  "compilerOptions": {
    /* Visit https://aka.ms/tsconfig.json to read more about this file */

    /* Completeness */
    "skipLibCheck": true,     
    "baseUrl": ".",                                      
      "paths": {
        "@components/*": ["src/components/*"],
        "@routes/*": ["src/routes/*"],
        "@utils/*": ["src/utils/*"],
        "@views/*": ["src/views/*"],
        "@stores/*": ["src/stores/*"],
        "@assets/*": ["src/assets/*"],
        "@layouts/*": ["src/layouts/*"],
        "@ui/*": ["src/ui/*"],
        "@styles/*": ["src/styles/*"],
        "@models/*": ["src/models/*"],
      },                            /* Skip type checking all .d.ts files. */
  }
}
